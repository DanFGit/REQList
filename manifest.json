{
  "manifest_version": 2,
  "name": "Halo REQlist",
  "version": "0.2.2",

  "description": "Automatically creates a checklist of unlocked REQ cards in Halo 5: Guardians",

  "author": "Daniel Farrell",
  "homepage_url": "http://danf.me/",

  "background": {
    "scripts": [
      "scripts/main.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon16.png"
  },

  "permissions": [
    "cookies",
    "*://*.halowaypoint.com/*",
    "storage"
  ],

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
